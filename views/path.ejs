<html lang="en">
<head>
  <%- include("partials/head.ejs") %>
  <link rel="stylesheet" href="/css/elements.css">
  <link rel="stylesheet" href="/css/loader.css">
  <link rel="stylesheet" href="/css/path.css">
    <title>path</title>
</head>
<body>


  <%- include("partials/loader.ejs") %>
  <!-- pathName, and article are the two variables you can use in this page to get data 
    note: you should use the same tag used in article if you want to insert html elements into the page-->
    <article class="ao7-article ao7-text-component" style="width: 70%; margin: 0 auto; margin-top: 2%;">
    <h1><%= pathName %></h1>
    <section><p><%- intro  %></p></section>
    <%- article %>
  </article>

  <% if (user === 'admin') {%>
  <textarea  id="introTA" cols="50" placeholder="Enter the updated introduction" rows="50" style="display: block;"></textarea>
    <br>
    <textarea  id="articleTA" cols="50" placeholder="Enter the updated article" rows="50" style="display: block;"></textarea>

    <button id="edit" class='submit'>Edit Article</button>
    <button id="saveButton" class='submit'>Save</button>

    <%}%>
</body>
<script type="module" src="/js/button_Handlers.js"></script>

</html>